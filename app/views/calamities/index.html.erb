<%= current_user.email %>
<style>

    table {
        border: 1px solid gray;
    }

    td tr:nth-child(even) {
        margin: 10px;
        padding: 10px;
        border: 1px solid gray;
        background-color: #5c636a;
    }
    .container{

    }
    body{
        background: #ffffff;
    }
    td tr:nth-last-child(even){
        background: #31d2f2;
    }
    body {
        background-repeat: no-repeat;
        background-position: center center;
        font-family: 'Source Sans Pro', sans-serif;
        padding: 1px;
    }

</style>
<body>
<h1>Post List </h1>
<table class="table">
  <thead>
  <td>Id</td>
  <td>Title</td>
  <td>Address</td>
  <td>Content</td>
  <td>Categories</td>
  <td>User</td>
  <td>Action</td>
  </thead>
  <% @calamities.each do |calamity| %>
    <div class="container"></div>
    <tr>
      <td><%= calamity.id %></td>
      <td><%= calamity.title %></td>
      <td><%= calamity.address %></td>
      <td><%= calamity.content %></td>
      <td><%= calamity.categories.pluck(:name).join(',') %></td>
      <td><%= calamity.user.email %></td>
      <td><%= link_to 'Edit', edit_calamity_path(calamity) if calamity.user == current_user %>
        <%= link_to 'Show', calamity_path(calamity) %>
        <%= button_to 'Delete', calamity_path(calamity), method: :delete if calamity.user == current_user %></td>
  <% end %>
  </tr>
  </div>
</table>
</body>
<%= link_to 'New', new_calamity_path %>
